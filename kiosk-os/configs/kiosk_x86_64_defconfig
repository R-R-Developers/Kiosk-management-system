# Kiosk OS x86_64 Configuration
# Based on Buildroot 2023.08.1

# Architecture
BR2_x86_64=y
BR2_ARCH="x86_64"
BR2_GCC_TARGET_ARCH="x86-64"

# System
BR2_SYSTEM_HOSTNAME="kiosk-device"
BR2_SYSTEM_BANNER="Welcome to Kiosk OS"
BR2_SYSTEM_PASSWD_SHA256=y

# Toolchain
BR2_TOOLCHAIN_BUILDROOT_WCHAR=y
BR2_TOOLCHAIN_BUILDROOT_CXX=y
BR2_TOOLCHAIN_BUILDROOT_LOCALE=y
BR2_PTHREAD_DEBUG=y
BR2_GCC_VERSION_11_X=y

# Kernel
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_LATEST_VERSION=y
BR2_LINUX_KERNEL_USE_ARCH_DEFAULT_CONFIG=y
BR2_LINUX_KERNEL_BZIMAGE=y
BR2_LINUX_KERNEL_INSTALL_TARGET=y

# Filesystem
BR2_TARGET_ROOTFS_EXT2=y
BR2_TARGET_ROOTFS_EXT2_4=y
BR2_TARGET_ROOTFS_EXT2_SIZE="512M"
BR2_TARGET_ROOTFS_TAR=y
BR2_ROOTFS_OVERLAY="$(BR2_EXTERNAL_KIOSK_PATH)/rootfs-overlay"

# Bootloader
BR2_TARGET_GRUB2=y
BR2_TARGET_GRUB2_BOOT_PARTITION="ext4"
BR2_TARGET_GRUB2_BUILTIN_MODULES="boot linux ext2 fat part_msdos part_gpt normal biosdisk search_fs_file"

# System packages
BR2_PACKAGE_BUSYBOX_CONFIG="$(BR2_EXTERNAL_KIOSK_PATH)/configs/busybox.config"
BR2_PACKAGE_SKELETON_INIT_SYSTEMD=y
BR2_PACKAGE_SYSTEMD=y
BR2_PACKAGE_SYSTEMD_NETWORKD=y
BR2_PACKAGE_SYSTEMD_RESOLVED=y

# Network
BR2_PACKAGE_DHCPCD=y
BR2_PACKAGE_WIRELESS_TOOLS=y
BR2_PACKAGE_WPA_SUPPLICANT=y
BR2_PACKAGE_WPA_SUPPLICANT_AUTOSCAN=y
BR2_PACKAGE_WPA_SUPPLICANT_CLI=y
BR2_PACKAGE_OPENSSH=y
BR2_PACKAGE_LIBCURL=y
BR2_PACKAGE_LIBCURL_CURL=y
BR2_PACKAGE_WGET=y

# Development tools (optional, for debugging)
BR2_PACKAGE_STRACE=y
BR2_PACKAGE_HTOP=y
BR2_PACKAGE_NANO=y
BR2_PACKAGE_VIM=y

# Container runtime
BR2_PACKAGE_DOCKER_ENGINE=y
BR2_PACKAGE_DOCKER_COMPOSE=y

# Python (for kiosk agent)
BR2_PACKAGE_PYTHON3=y
BR2_PACKAGE_PYTHON3_PYEXPAT=y
BR2_PACKAGE_PYTHON3_ZLIB=y
BR2_PACKAGE_PYTHON3_HASHLIB=y
BR2_PACKAGE_PYTHON3_SQLITE=y
BR2_PACKAGE_PYTHON3_SSL=y
BR2_PACKAGE_PYTHON3_URLLIB=y
BR2_PACKAGE_PYTHON3_JSON=y

# Python packages
BR2_PACKAGE_PYTHON_REQUESTS=y
BR2_PACKAGE_PYTHON_WEBSOCKET_CLIENT=y
BR2_PACKAGE_PYTHON_CRYPTOGRAPHY=y

# Multimedia (for kiosk applications)
BR2_PACKAGE_ALSA_UTILS=y
BR2_PACKAGE_XORG7=y
BR2_PACKAGE_XSERVER_XORG_SERVER=y
BR2_PACKAGE_XSERVER_XORG_SERVER_MODULAR=y
BR2_PACKAGE_LIBERATION=y
BR2_PACKAGE_FIREFOX=y
BR2_PACKAGE_CHROMIUM=y

# Hardware support
BR2_PACKAGE_LINUX_FIRMWARE=y
BR2_PACKAGE_LINUX_FIRMWARE_INTEL_WIFI=y
BR2_PACKAGE_LINUX_FIRMWARE_REALTEK_RTL8192=y
BR2_PACKAGE_LINUX_FIRMWARE_BROADCOM_BCM43XX=y

# File systems
BR2_PACKAGE_DOSFSTOOLS=y
BR2_PACKAGE_E2FSPROGS=y
BR2_PACKAGE_NTFS_3G=y

# Security
BR2_PACKAGE_OPENSSL=y
BR2_PACKAGE_CA_CERTIFICATES=y

# Image generation
BR2_ROOTFS_POST_BUILD_SCRIPT="$(BR2_EXTERNAL_KIOSK_PATH)/scripts/post-build.sh"
BR2_ROOTFS_POST_IMAGE_SCRIPT="$(BR2_EXTERNAL_KIOSK_PATH)/scripts/post-image.sh"
